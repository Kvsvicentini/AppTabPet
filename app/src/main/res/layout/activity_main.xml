<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtAnimais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:text="@string/animais"
        android:textColor="#673AB7"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/TabLayoutAnimais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAnimais">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTbItemCachorro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/dog_icon"
            android:text="@string/cachorro" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTbItemGato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/cat_icon"
            android:text="@string/gato" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTbItemPeixe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/fish_icon"
            android:text="@string/peixe" />

    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>